<skin>
	<!--  Skin: YouViX-Blue by rossi2000 & simonsez  -->
	<!--  SKIN FILE -->
	<!--  This skin is OpenSource. Anyone can modify it and use it in other images.  -->
	<!--  BUT DO NOT REMOVE OR CHANGE THIS HEADER !!!  -->
	<!--  Do whatever you want with this skin, but don't tell it's yours, or your idea!  -->
	
	<!--  ## Head ##  -->
	
	<output id="0">
		<resolution xres="1920" yres="1080" bpp="32" />
	</output>
	
	<include filename="/usr/share/enigma2/skin_default/skin_YouViX_Templates.xml"/>
	<include filename="/usr/share/enigma2/skin_default/skin_YouViX.xml"/>
	<include filename="/usr/share/enigma2/skin_default/skin_YouViX_ExtPlugins.xml"/>
	<include filename="/usr/share/enigma2/skin_default/skin_YouViX_Wizards.xml"/>
	
	<fonts>		
		<font name="youvix-b" filename="/usr/share/fonts/youvix-b.ttf" scale="100" />
		<font name="youvix-r" filename="/usr/share/fonts/youvix-r.ttf" scale="100" />
		<font name="youvix-l" filename="/usr/share/fonts/youvix-l.ttf" scale="100" />
		<alias name="ChoiceList" font="youvix-r" size="28" height="50" />
		<alias name="Body" font="youvix-r" size="28" height="50" />
		<alias name="TextNormal" font="youvix-r" size="28" height="50" />
		<font name="Subtitlefont" filename="/usr/share/fonts/youvix-r.ttf" scale="90" />
	</fonts>
	
	<colors>
	    <color name="windowbackground" value="#AD000000" />
		<color name="background2" value="#51010101"/>
		<color name="menubackground" value="#30000000"/>
		<color name="menubackground2" value="#17000000"/>
		<color name="transparent" value="#ffffffff" />
		<color name="red" value="#27d7361d" />
		<color name="green" value="#27307e13" />
		<color name="white" value="#00ffffff" />
		<color name="black" value="#00000000" />
		<color name="grey" value="#00b3b3b3" />
		<color name="lightcolour" value="#003499cc" />
		<color name="darkcolour" value="#001176ad" />
		<color name="window-sel-bg" value="#00acacac" />
	</colors>
	
	<windowstyle type="skinned" id="0">
		<title offset="60,10" font="youvix-r;28" />
		<color name="Background" color="menubackground" />
		<color name="LabelForeground" color="white" />
		<color name="ListboxBackground" color="menubackground" />
		<color name="ListboxForeground" color="white" />
		<color name="ListboxSelectedBackground" color="lightcolour" />
		<color name="ListboxSelectedForeground" color="white" />
		<color name="ListboxMarkedBackground" color="window-sel-bg" />
		<color name="ListboxMarkedForeground" color="white" />
		<color name="ListboxMarkedAndSelectedBackground" color="window-sel-bg" />
		<color name="ListboxMarkedAndSelectedForeground" color="white" />
		<color name="WindowTitleForeground" color="white" />
		<color name="WindowTitleBackground" color="menubackground" />
		<borderset name="bsWindow">
			<pixmap pos="bpTopLeft" filename="screens/b_tl.png" />
			<pixmap pos="bpTop" filename="screens/b_t.png" />
			<pixmap pos="bpTopRight" filename="screens/b_tr.png" />
			<pixmap pos="bpLeft" filename="screens/b_l.png" />
			<pixmap pos="bpRight" filename="screens/b_r.png" />
			<pixmap pos="bpBottomLeft" filename="screens/b_bl.png" />
			<pixmap pos="bpBottom" filename="screens/b_b.png" />
			<pixmap pos="bpBottomRight" filename="screens/b_br.png" />
		</borderset>
	</windowstyle>
	
</skin>